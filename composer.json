{
	"name": "pressgang-wp/pressgang",
	"description": "Package for the WordPress PressGang parent theme framework",
	"type": "wordpress-theme",
	"license": "MIT",
	"authors": [
		{
			"name": "Benedict Wallis",
			"email": "ben@benedict-wallis.com"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": "^8.3",
		"timber/timber": "^2.0",
		"doctrine/inflector": "^2.0",
		"symfony/string": "^7.0",
		"upstatement/routes": "^0.9.1"
	},
	"extra": {
		"installer-paths": {
			"../plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"../themes/{$name}/": [
				"type:wordpress-theme"
			]
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^9.6",
		"yoast/wp-test-utils": "^1.2"
	},
	"autoload": {
		"psr-4": {
			"PressGang\\": "src/"
		},
		"files": [
			"src/Helpers/config.php",
			"src/Helpers/helper.php",
			"src/Helpers/woocommerce.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"PressGang\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "@test:unit",
		"test:unit": "phpunit --testsuite unit",
		"test:compat": "php -d error_reporting=E_ALL -d display_errors=1 ./vendor/bin/phpunit --testsuite unit"
	}
}
