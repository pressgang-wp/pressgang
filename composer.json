{
	"name": "pressgang-wp/pressgang",
	"description": "Package for the WordPress PressGang parent theme framework",
	"type": "wordpress-theme",
	"license": "MIT",
	"authors": [
		{
			"name": "Benedict Wallis",
			"email": "ben@benedict-wallis.com"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": "^8.0",
		"timber/timber": "^2.0",
		"doctrine/inflector": "^2.0",
		"symfony/string": "7.0",
		"upstatement/routes": "^0.9.1",
		"cweagans/composer-patches": "^1.7"
	},
	"extra": {
		"installer-paths": {
			"../plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"../themes/{$name}/": [
				"type:wordpress-theme"
			]
		},
		"patches": {
			"upstatement/routes": {
				"Fix change due to altorouter/altorouter": "patches/upstatement-routes.patch"
			}
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"cweagans/composer-patches": true
		}
	},
	"autoload": {
		"psr-4": {
			"PressGang\\": "src/"
		},
		"files": [
			"src/Helpers/config.php",
			"src/Helpers/helper.php",
			"src/Helpers/woocommerce.php"
		]
	}
}
